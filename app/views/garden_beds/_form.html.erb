<%= form_for @garden_bed, :html => { :class => "form-horizontal garden_bed" } do |f| %>

  <% if @garden_bed.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@garden_bed.errors.count, "error") %> prohibited this garden_bed from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @garden_bed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :num, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :num, :class => 'form-control' %>
    </div>
    <%=f.error_span(:num) %>
  </div>
  <div class="form-group">
    <%= f.label :comment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :comment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comment) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                garden_beds_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
