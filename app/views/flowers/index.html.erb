<%- model_class = Flower -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Название</th>
      <th>Название культуры</th>
      <th>Цена</th>
      <th></th>
      <th>Дата посадки</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @flowers.each do |flower| %>
      <tr>
        <td><%= link_to flower.id, flower_path(flower) %></td>
        <td><%= flower.f_name %></td>
        <td><%= flower.culture.try(:name)%></td>
        <td><%= flower.cost %></td>
        <td><%= flower.garden_bed.try(:num) %></td>
        <td><%= flower.planting_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_flower_path(flower), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      flower_path(flower),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flower_path,
            :class => 'btn btn-primary' %>
