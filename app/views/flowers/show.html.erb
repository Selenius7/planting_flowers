<%- model_class = Flower -%>
<div class="page-header">
  <h1>Список</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название</strong></dt>
  <dd><%= @flower.f_name %></dd>
  <dt><strong>Название культуры</strong></dt>
  <dd><%= @flower.culture_name %></dd>
  <dt><strong>Цена</strong></dt>
  <dd><%= @flower.cost %></dd>
  <dt><strong>Грядка</strong></dt>
  <dd><%= @flower.garden_bed_id %></dd>
  <dt><strong>Дата посадки</strong></dt>
  <dd><%= @flower.planting_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              flowers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flower_path(@flower), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flower_path(@flower),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
