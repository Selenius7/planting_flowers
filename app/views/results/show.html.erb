<%- model_class = Result -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Цветок</strong></dt>
  <dd><%= @result.flower.try(:f_name)%></dd>
  <dt><strong><%= model_class.human_attribute_name(:result_date)%>:</strong></dt>
  <dd><%= @result.result_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @result.comment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              results_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(@result), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
