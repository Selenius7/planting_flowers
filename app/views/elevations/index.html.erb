<%- model_class = Elevation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Действие</th>
      <th>Цветок</th>
      <th><%= model_class.human_attribute_name(:elevation_data) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @elevations.each do |elevation| %>
      <tr>
        <td><%= link_to elevation.id, elevation_path(elevation) %></td>
        <td><%= elevation.deed.try(:name) %></td>
        <td><%= elevation.flower.try(:f_name)%></td>
        <td><%= elevation.elevation_data %></td>
        <td><%= elevation.comment %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_elevation_path(elevation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      elevation_path(elevation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_elevation_path,
            :class => 'btn btn-primary' %>
