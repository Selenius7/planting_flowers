<%- model_class = Elevation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Действие</strong></dt>
  <dd><%= @elevation.deed.try(:name)%></dd>
  <dt><strong>Цветок</strong></dt>
  <dd><%= @elevation.flower.try(:f_name)%></dd>
  <dt><strong><%= model_class.human_attribute_name(:elevation_data) %>:</strong></dt>
  <dd><%= @elevation.elevation_data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @elevation.comment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              elevations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_elevation_path(@elevation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              elevation_path(@elevation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
