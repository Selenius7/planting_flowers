<%= grid(@elevations_grid, show_filters: :when_filtered, hide_csv_button: true) do |g|
  g.column name: 'Идентификатор', attribute: 'id'
  g.column name: 'Имя', attribute: 'name',  assoc: :deed
  g.column name: 'Цветок', attribute: 'f_name', assoc: :flower
  g.column name: 'Дата', attribute: 'elevation_data', filter_type: :string
  g.column name: 'Комментарий', attribute: 'comment'


  g.column(in_csv: false) do |elevation|
    link_to t('.edit', :default => t("helpers.links.edit")),
            edit_elevation_path(elevation), :class => 'btn btn-default btn-xs'
  end

  g.column(in_csv: false) do|elevation|
    link_to t('.destroy', :default => t("helpers.links.destroy")),
            elevation_path(elevation),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
            :class => 'btn btn-xs btn-danger'
  end
end -%>